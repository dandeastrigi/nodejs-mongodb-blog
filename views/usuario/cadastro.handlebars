{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
  <div class="card-body">
    {{#if usuario}}
    <h5 class="card-title">Editar perfil</h5>   
    {{else}}
    <h5 class="card-title">Cadastro de usu√°rio</h5>
    <h6 class="card-subtitle mb-2 text-muted">Preencha os dados e se torne um membro do Blog do Node</h6>
    {{/if}}
    <form action="/usuario/salvar" method="POST" class="row g-3 mt-2">
      <input type="hidden" name="id" value="{{usuario._id}}">
      <div class="col-12">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome completo" required value="{{usuario.nome}}" minlength="3" maxlength="250">
      </div>
      <div class="col-12">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required value="{{usuario.email}}" minlength="3" maxlength="250">
      </div>

      <div class="col-md-6">
        <label for="senha" class="form-label">{{#if usuario}}Alterar senha{{else}}Senha{{/if}}</label>
        <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite uma senha com pelo menos 6 caracteres" minlength="6" maxlength="36"{{#if usuario}}{{else}} required{{/if}}>
      </div>
      <div class="col-md-6">
        <label for="senha2" class="form-label">Repita a sua senha</label>
        <input type="password" class="form-control" id="senha2" name="senha2" placeholder="Digite novamente a mesma senha" minlength="6" maxlength="36"{{#if usuario}}{{else}} required{{/if}}>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Salvar</button>
      </div>
    </form>
  </div>
</div>


